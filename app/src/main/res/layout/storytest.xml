<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/storytestheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:padding="10dp"
        android:text="Life As I See :)"
        android:textSize="28sp"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/storytestid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:padding="12dp"
        android:textSize="26dp"
        android:text="At the end of the day, life is about being happy being who you are, and I feel like  we are so blessed to have the support system and the best family to really just support each other no matter what we're going through"
        android:textColor="@android:color/background_light" />

</LinearLayout>